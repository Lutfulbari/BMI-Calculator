<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="15dp"

    >

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="আপনার ওজন কত? (kg)"
        android:textSize="30dp"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:gravity="center"

        />

    <EditText
        android:id="@+id/edWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="waight in kG"
        android:textStyle="bold"
        android:textColor="#570303"
        android:layout_margin="20dp"
        android:gravity="center"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="আপনার উচ্চতা কত?"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#03A9F4"
        android:layout_margin="20dp"
        android:gravity="center"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >
        <EditText
            android:id="@+id/edFeet"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="feet"
            android:inputType="numberDecimal"
            android:padding="15dp"
            android:gravity="center"

            />
        <EditText
            android:id="@+id/edInch"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Inch"
            android:inputType="numberDecimal"
            android:padding="15dp"
            android:gravity="center"

            />


    </LinearLayout>

    <Button
        android:id="@+id/buttonCal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="BMI হিসাব করুন"
        android:textSize="30sp"
        android:textColor="#E30606"
        android:background="#0E0A0A"
        android:textStyle="bold"
        android:layout_margin="10dp"

        />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result Here"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#03A9F4"
        android:layout_margin="20dp"
        android:gravity="center"


        />


</LinearLayout>

